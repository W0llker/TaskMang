<configuration >
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %red(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%c{1}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

        <root level="info">
            <appender-ref ref="Console" />
        </root>
</configuration>